@page "{assignmentId:int}"
@model PetCareConnect.Pages.EditAssignmentModel
@{
    ViewData["Title"] = "Edit Assignment";
}

<h1>Edit Assignment</h1>
<div class="container mt-4">
    <form method="post">
        <input type="hidden" asp-for="Assignment.AssignmentId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <div class="form-group">
            <label>Pet:</label>
            <select asp-for="Assignment.PetId" asp-items="@Model.RegisteredPets?.Select(pet => new SelectListItem { Value = pet.PetId.ToString(), Text = pet.Name })" class="form-control"></select>
            <span asp-validation-for="Assignment.PetId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Start Date:</label>
            <input type="date" asp-for="Assignment.StartDate" class="form-control" />
            <span asp-validation-for="Assignment.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>End Date:</label>
            <input type="date" asp-for="Assignment.EndDate" class="form-control" />
            <span asp-validation-for="Assignment.EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Task Type:</label>
            <select asp-for="Assignment.TaskType" asp-items="@Model.TaskTypes" class="form-control"></select>
            <span asp-validation-for="Assignment.TaskType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Feeding Schedule:</label>
            <input type="text" asp-for="Assignment.FeedingSchedule" class="form-control" />
            <span asp-validation-for="Assignment.FeedingSchedule" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Food Amount:</label>
            <input type="text" asp-for="Assignment.FoodAmount" class="form-control" />
            <span asp-validation-for="Assignment.FoodAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Title:</label>
            <input type="text" asp-for="Assignment.Title" class="form-control" />
            <span asp-validation-for="Assignment.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>City:</label>
            <input type="text" asp-for="Assignment.City" class="form-control" />
            <span asp-validation-for="Assignment.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Comments:</label>
            <textarea asp-for="Assignment.Comments" class="form-control"></textarea>
            <span asp-validation-for="Assignment.Comments" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Payment:</label> <!-- New input for Payment -->
            <input type="number" asp-for="Assignment.Payment" class="form-control" />
            <span asp-validation-for="Assignment.Payment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
