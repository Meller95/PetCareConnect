@page
@model PetCareConnect.Pages.MessagesModel

<h2>Messages</h2>
<ul>
    @foreach (var message in Model.Messages)
    {
        <li>
            <div>
                <strong>@(message.SenderUsername == HttpContext.Session.GetString("Username") ? "You" : message.SenderUsername):</strong>
            </div>
            <div>
                <span>To: @(message.ReceiverUsername == HttpContext.Session.GetString("Username") ? "You" : message.ReceiverUsername)</span> <!-- Display "To: Receiver username" -->
            </div>
            <div>@message.Content</div>
            <div>
                <small>@message.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</small>
            </div>
        </li>
    }
</ul>

<!-- Button to compose a new message -->
<a asp-page="/NewMessage" class="btn btn-primary">New Message</a>
