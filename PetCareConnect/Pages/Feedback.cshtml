@page
@model PetCareConnect.Pages.FeedbackModel
@{
    ViewData["Title"] = "Feedback";
}

<h1>Feedback</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Feedback.FeedbackText"></label>
        <textarea asp-for="Feedback.FeedbackText" class="form-control"></textarea>
        <span asp-validation-for="Feedback.FeedbackText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Rating (1-5):</label>
        <input type="number" asp-for="Feedback.Rating" class="form-control" min="1" max="5" />
        <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
